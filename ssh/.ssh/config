# Configuration for Roadsmart Dotfiles repository
Host roadsmart-dotfiles
	HostName github.com
	User git
	IdentityFile ~/.ssh/roadsmart-dotfiles
	IdentitiesOnly yes
    StrictHostKeyChecking accept-new

Host roadsmart-docker
	HostName github.com
	User git
	IdentityFile ~/.ssh/roadsmart-docker
	IdentitiesOnly yes
	StrictHostKeyChecking accept-new

Host roadsmart-socket
	HostName github.com
	User git
	IdentityFile ~/.ssh/roadsmart-socket
	IdentitiesOnly yes
	StrictHostKeyChecking accept-new
