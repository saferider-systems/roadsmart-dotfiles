# ============================================================
# Upstream Definition
# ============================================================
upstream roadsmart_dev_upstream {
    least_conn;

    server 127.0.0.1:5400 max_fails=3 fail_timeout=30s;

    # If you later scale:
    # server 127.0.0.1:5401;
    # server 127.0.0.1:5402;
}

# ============================================================
# HTTP â†’ HTTPS Redirect
# ============================================================
server {
    listen 80;
    listen [::]:80;

    server_name dev.roadsmartspeedtracker.com;

    return 301 https://dev.roadsmartspeedtracker.com$request_uri;
}

# ============================================================
# HTTPS Server Block
# ============================================================
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name dev.roadsmartspeedtracker.com;

    # --------------------------------------------------------
    # SSL Configuration (Certbot-managed)
    # --------------------------------------------------------
    ssl_certificate /etc/letsencrypt/live/dev.roadsmartspeedtracker.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev.roadsmartspeedtracker.com/privkey.pem;

    # --------------------------------------------------------
    # Reverse Proxy
    # --------------------------------------------------------
    location / {
        proxy_pass http://roadsmart_dev_upstream;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;

        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-NginX-Proxy true;

        proxy_redirect off;
        proxy_cache_bypass $http_upgrade;
        proxy_ssl_session_reuse off;
    }

    # --------------------------------------------------------
    # Limits & Logs
    # --------------------------------------------------------
    client_max_body_size 20M;

    access_log /var/log/nginx/dev.roadsmartspeedtracker.access.log;
    error_log  /var/log/nginx/dev.roadsmartspeedtracker.error.log;
}
