# ============================================================
# Server Block 1: HTTP to HTTPS Redirect (Main Domains)
# ============================================================
server {
    listen 80;
    listen [::]:80;

    server_name socket.roadsmartspeedtracker.com;

    return 301 https://socket.roadsmartspeedtracker.com$request_uri;
}

# ============================================================
# HTTPS Server Block for Web Platform
# ============================================================
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name socket.roadsmartspeedtracker.com;

    # --------------------------------------------------------
    # SSL Configuration (Certbot-managed)
    # --------------------------------------------------------
    ssl_certificate /etc/letsencrypt/live/socket.roadsmartspeedtracker.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/socket.roadsmartspeedtracker.com/privkey.pem;

    # --------------------------------------------------------
    # Node Socket Services
    # --------------------------------------------------------
    location /gateway {
        proxy_pass http://127.0.0.1:5000;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;

        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-NginX-Proxy true;

        proxy_redirect off;
        proxy_cache_bypass $http_upgrade;
        proxy_ssl_session_reuse off;
    }

    # --------------------------------------------------------
    # Node Gateway Websocket Server
    # --------------------------------------------------------
    location /api {
        proxy_pass http://127.0.0.1:6000;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;

        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-NginX-Proxy true;

        proxy_redirect off;
        proxy_cache_bypass $http_upgrade;
        proxy_ssl_session_reuse off;
    }

    # --------------------------------------------------------
    # Node User Websocket Server
    # --------------------------------------------------------
    location ~* \.io {
        proxy_pass http://127.0.0.1:7000;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;

        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-NginX-Proxy true;

        proxy_redirect off;
        proxy_cache_bypass $http_upgrade;
        proxy_ssl_session_reuse off;
    }

    # --------------------------------------------------------
    # Limits & Logs
    # --------------------------------------------------------
    client_max_body_size 20M;

    access_log /var/log/nginx/socket.roadsmartspeedtracker.access.log;
    error_log  /var/log/nginx/socket.roadsmartspeedtracker.error.log;
}
